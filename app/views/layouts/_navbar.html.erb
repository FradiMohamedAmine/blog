<header class="navbar navbar-expand-lg navbar-dark" style="background-color: #343a40;">
  <div class="container d-flex justify-content-between align-items-center">
    <%= link_to "MY BLOG", articles_path, class: "navbar-brand" %>

    <% if user_signed_in? %>
      <div class="d-flex align-items-center">
        <span class="navbar-text pr-3">
          <%= current_user.name %>
        </span>
        <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-light" %>
      </div>
    <% else %>
      <%= link_to "Sign in", new_user_session_path, class: "btn btn-light" %>
    <% end %>
  </div>
</header>
