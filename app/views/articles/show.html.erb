<%= turbo_stream_from "comments" %>

<main class="container text-left">
  <%= link_to sanitize("&larr; Back to articles"), articles_path, class: "navbar-brand d-block mb-4 mt-2" %>
  
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1><%= @article.title %></h1>

      <div class="article-body">
        <%= @article.body %>
      </div>

      <hr>

      <h2>Comments</h2>

      <%= render "comments/form", article: @article, comment: @comment %>

      <div id="comments">
        <%= render @article.comments.ordered %>
      </div>
    </div>
  </div>
</main>
